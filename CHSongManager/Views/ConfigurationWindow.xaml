<infrastructure:WindowView x:Class="CHSongManager.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHSongManager"
        xmlns:infrastructure="clr-namespace:CHSongManager.Infrastructure"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Width="300" SizeToContent="Height">
    <StackPanel>
        <Label>Songs Location</Label>
        <DockPanel LastChildFill="True" Margin="0 5">
            <Button Command="{Binding SelectFolderCommand}" DockPanel.Dock="Right"
                    CommandParameter="{Binding ElementName=SongFolder, Path=Text}" Margin="5 0">Browse</Button>
            <TextBox Name="SongFolder" Text="{Binding SongFolder}" Margin="5 0"></TextBox>
        </DockPanel>
        <Button Command="{Binding OKCommand}" Margin="5 5">OK</Button>
    </StackPanel>
</infrastructure:WindowView>



